<Window x:Class="POS_System.EditCategoryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POS_System"
        mc:Ignorable="d"
        Title="EditCategoryDialog" Height="450" Width="800">
    <Grid>
        <Label Content="Category Name:" VerticalAlignment="Center" HorizontalAlignment="Left"/>
        <TextBox x:Name="CategoryNameTextBox" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="10,0,10,0"/>
        <Button Content="Save" Click="SaveButton_Click" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
    </Grid>
</Window>
