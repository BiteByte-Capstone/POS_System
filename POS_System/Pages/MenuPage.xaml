<Window x:Class="POS_System.Pages.MenuPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POS_System.Pages"
        mc:Ignorable="d"
        Title="MenuPage" WindowState="Maximized" Width="800" Height="450">
    <Grid Background="#212121">




        <!-- Dark Gray Background -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" MinHeight="58"/>
            <RowDefinition Height="Auto" MinHeight="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Buttons -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- item button list -->
        <StackPanel x:Name="FoodItemsPanel" Grid.Column="2" Grid.Row="4" 
            HorizontalAlignment="Center" VerticalAlignment="Top" Width="282" Height="0"/>

        <!-- Update TabControl -->
        <TabControl Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Margin="316,0,0,185" Grid.RowSpan="3" >
            <!-- Set it to the next row -->
            <!-- ... rest of the TabControl definition -->
        </TabControl>


        <!--Buttons-->
        <Button Content="Back" HorizontalAlignment="Left" Background="Orange" BorderBrush="#FF4C4B56" FontSize="14" FontFamily="Verdana" FontWeight="Bold" Height="36" Margin="13,82,0,0" VerticalAlignment="Top" Width="73" Grid.Row="4" Click="Back_to_TablePage"/>
        <Button Background="Orange" BorderBrush="#FF4C4B56" FontSize="15" FontFamily="Verdana" FontWeight="Bold" Height="38" Margin="14,157,4,0" VerticalAlignment="Top" Grid.Row="4">
            <Viewbox HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock TextWrapping="Wrap">
            Change
            Table
                </TextBlock>
            </Viewbox>
        </Button>
        <Button Content="Split Bill" HorizontalAlignment="Left" Background="Orange" BorderBrush="#FF4C4B56" FontSize="14" FontFamily="Verdana" FontWeight="Bold" Height="36" Margin="14,120,0,0" VerticalAlignment="Top" Width="73" Grid.Row="4"/>
        <Button Content="Print Bill" HorizontalAlignment="Left" Background="Orange" BorderBrush="#FF4C4B56" FontSize="14" FontFamily="Verdana" FontWeight="Bold" Height="36" Margin="14,230,0,0" VerticalAlignment="Top" Width="73" Grid.Row="4"/>
        <Button Content="Payment" HorizontalAlignment="Left" Background="Orange" BorderBrush="#FF4C4B56" FontSize="14" FontFamily="Verdana" FontWeight="Bold" Height="36" VerticalAlignment="Top" Width="73" Grid.Row="4" Margin="17,271,0,0" Click="PaymentButton"/>


        <!-- Category Buttons -->
        <TabControl Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="2" BorderThickness="0" Height="58" Width="291">
            <!-- First set of categories -->
            <TabItem Header="→" Height="22" Margin="-2,0,-2,0" VerticalAlignment="Bottom">
                <StackPanel Orientation="Horizontal" >
                    <Button Content="Category 1" Margin="5" Background="Orange" BorderBrush="#FF4C4B56" />
                    <Button Content="Category 2" Margin="5" Background="Orange" BorderBrush="#FF4C4B56"/>
                    <Button Content="Category 3" Margin="5" Background="Orange" BorderBrush="#FF4C4B56"/>
                    <Button Content="Category 4" Margin="5" Background="Orange" BorderBrush="#FF4C4B56"/>
                </StackPanel>
            </TabItem>



            <!-- Second set of categories -->
            <TabItem Header="→">
                <StackPanel Orientation="Horizontal">
                    <Button Content="Category 5" Margin="5"/>
                    <Button Content="Category 6" Margin="5"/>
                    <Button Content="Category 7" Margin="5"/>
                    <Button Content="Category 8" Margin="5"/>
                </StackPanel>
            </TabItem>
        </TabControl>



        <!-- Table Information -->
        <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Vertical" Margin="10,0,10,185" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Table Number:" VerticalAlignment="Center" Margin="0,5" Foreground="Orange"/>
                <TextBox x:Name="TableNumberTextBox" Text="1" VerticalAlignment="Center" IsReadOnly="True" Grid.Column="1" Foreground="Orange" Background="#FF454545"  BorderBrush="Orange" Margin="10,0,-10,0" TextChanged="TextBox_TextChanged" />
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Status:" VerticalAlignment="Center" Margin="0,5" Foreground="Orange"/>
                <TextBox Text="Occupied" VerticalAlignment="Center" IsReadOnly="True" Grid.Column="1" RenderTransformOrigin="0.562,0.65"  Foreground="Orange" Background="#FF454545"  BorderBrush="Orange" Margin="10,0,-10,0"/>
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="16*"/>
                    <ColumnDefinition Width="29*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Type:" VerticalAlignment="Center" Foreground="Orange"/>
                <TextBox x:Name="TypeTextBox" VerticalAlignment="Center" IsReadOnly="True" Grid.Column="1" Foreground="Orange" Background="#FF454545"  BorderBrush="Orange" Margin="10,0,-10,0" TextChanged="OrderTypeTextBox" Grid.ColumnSpan="2"/>
            </Grid>
            <ListBox x:Name="OrdersListBox" Width="297" Height="237"  Background="#FF454545"  BorderBrush="Orange" RenderTransformOrigin="0.5,0.5">
                <ListBox.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleX="-0.364"/>
                        <RotateTransform/>
                        <TranslateTransform X="-0.994"/>
                    </TransformGroup>
                </ListBox.RenderTransform>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding FoodName}" Width="150"/>
                            <TextBlock Text="{Binding Quantity}" Width="50"/>
                            <TextBlock Text="{Binding Price}" Width="100"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>

        <Button Grid.Column="1" Content="Send" HorizontalAlignment="Left" Height="24" Margin="10,328,0,0" VerticalAlignment="Top" Width="84" Foreground="Orange" Background="#FF454545"  BorderBrush="Orange" Grid.Row="4" />
        <Button Grid.Column="1" Content="Void" HorizontalAlignment="Left" Height="24" Margin="100,328,0,0" VerticalAlignment="Top" Width="84" Foreground="Orange" Background="#FF454545"  BorderBrush="Orange" Grid.Row="4"  />



    </Grid>
</Window>
