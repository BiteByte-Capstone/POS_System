<Window x:Class="POS_System.Pages.MenuPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POS_System.Pages"
        mc:Ignorable="d"
       Title="Menu Page" WindowState="Maximized">


    <Grid Background="#212121" Margin="0,0,0,-6">

        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="54.04"/>
            <RowDefinition Height="41.96"/>
            <RowDefinition Height="40.04"/>
            <RowDefinition Height="436"/>
            <RowDefinition Height="93.96"/>

        </Grid.RowDefinitions>
        <!-- Buttons -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*" MinWidth="100"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="26"/>
            <ColumnDefinition Width="263"/>
            <ColumnDefinition Width="287"/>
            <ColumnDefinition Width="*" MinWidth="500"/>
            <ColumnDefinition Width="185*" MinWidth="185"/>
        </Grid.ColumnDefinitions>

        <!--Left panel button-->
        <Button Content="Back" HorizontalAlignment="Left" Background="red" BorderBrush="#FF4C4B56" FontSize="25" FontFamily="Verdana" FontWeight="Bold" Height="44" VerticalAlignment="Center" Width="176" RenderTransformOrigin="0.5,0.5" Click="Back_to_TablePage" Grid.Row="1" Grid.ColumnSpan="2" Margin="50,0,0,0" />

        <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="3" Grid.RowSpan="2" Margin="12,40,2,0">
            <Button Background="Orange" BorderBrush="#FF4C4B56" FontSize="15" FontFamily="Verdana" FontWeight="Bold" Height="58" VerticalAlignment="Top">
                <Viewbox HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Change Table" TextWrapping="Wrap" TextAlignment="Center"/>
                </Viewbox>
            </Button>
            <Button Content="Split Bill" HorizontalAlignment="Left" Background="Orange" BorderBrush="#FF4C4B56" FontSize="25" FontFamily="Verdana" FontWeight="Bold" Height="60" VerticalAlignment="Top" Width="186" Click="SplitBillButton_Click" Margin="2,23,0,0"/>
            <Button Content="Print Bill" HorizontalAlignment="Left" Background="Orange" BorderBrush="#FF4C4B56" FontSize="25" FontFamily="Verdana" FontWeight="Bold" Height="70" VerticalAlignment="Top" Width="186" Margin="2,22,0,0" Click="PrintButton_Click"/>
            <Button Content="Payment" HorizontalAlignment="Left" Background="Orange" BorderBrush="#FF4C4B56" FontSize="25" FontFamily="Verdana" FontWeight="Bold" Height="70" VerticalAlignment="Top" Width="186" Margin="2,22,0,0" Click="PaymentButton_Click"/>
            <Button Content="SB Item" HorizontalAlignment="Left" Background="Orange" BorderBrush="#FF4C4B56" FontSize="25" FontFamily="Verdana" FontWeight="Bold" Height="70" VerticalAlignment="Top" Width="186" Margin="2,22,0,0" Click="SplitbyItem_Click"/>
        </StackPanel>


        <Button Content="Save" Background="Green" BorderBrush="#FF4C4B56" FontSize="25" FontFamily="Verdana" FontWeight="Bold" Height="70" VerticalAlignment="Top" Grid.Row="5" Margin="91,5,13,0" Click="SaveButton_Click" Grid.Column="1" Grid.ColumnSpan="2"/>
        <Button HorizontalAlignment="Left" Height="65" Margin="0,10,0,0" VerticalAlignment="Top" Width="86" Foreground="Red" Background="{x:Null}"  BorderBrush="Red" FontSize="20" Click="CancelButton_Click" RenderTransformOrigin="-1.893,0.589" FontFamily="Verdana" Grid.Row="5" BorderThickness="5,5,5,5" Grid.Column="1">
            <Viewbox HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Cancel Order" TextWrapping="Wrap" TextAlignment="Center" Width="74" Foreground="Red"/>
            </Viewbox>
        </Button>
        <Button Grid.Column="3" HorizontalAlignment="Left" Height="65" Margin="191,10,0,0" VerticalAlignment="Top" Width="138" Foreground="Orange" Background="#FF454545"  BorderBrush="Orange" FontSize="20" Click="VoidButton_Click" RenderTransformOrigin="-1.893,0.589" Grid.Row="5" Grid.ColumnSpan="2" >
            <Viewbox HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Delete Item" TextWrapping="Wrap" TextAlignment="Center" Width="106" Height="25"/>
            </Viewbox>
        </Button>




        <!-- Table Information (middle part)-->
        <Label  Content="Menu Page" HorizontalAlignment="Center" VerticalAlignment="Top" Width="530" Height="63" FontFamily="Verdana" FontSize="32" FontWeight="Bold" BorderThickness="3,3,3,3" BorderBrush="Orange" Background="Orange" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Column="3" Grid.ColumnSpan="2" Grid.RowSpan="2" Margin="0,15,0,0"/>


        <Grid Grid.Column="3" Grid.Row="2" Grid.RowSpan="2" Grid.ColumnSpan="2" Margin="0,2,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="37*"/>
                <RowDefinition Height="39*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="148*"/>
                <ColumnDefinition Width="150*"/>
                <ColumnDefinition Width="113*"/>
                <ColumnDefinition Width="240*"/>
            </Grid.ColumnDefinitions>





            <TextBlock 
               Foreground="Orange" 
               FontFamily="Verdana" 
               FontSize="15" 
               Height="26" Width="116" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,8,0,0"><Run Text="Table Number"/><Run Language="en-ca" Text=" "/><Run Text=":"/></TextBlock>

            <TextBox Name="TableNumberTextBox" 
             IsReadOnly="True" 
             Foreground="Orange" 
             BorderBrush="Orange" 
             FontFamily="Verdana" Background="{x:Null}" Margin="10,8,10,10" Grid.Column="1"/>



            <TextBlock 
               Foreground="Orange" 
               FontFamily="Verdana" 
               FontSize="15" Margin="24,7,14,11" Grid.Row="1" Grid.Column="2" RenderTransformOrigin="0.742,0.524"><Run Text="Status"/><Run Text=" "/><Run Language="en-ca" Text=": "/></TextBlock>
            <TextBox x:Name="StatusTextBlock" 
             IsReadOnly="True" 
             Foreground="Orange" 
             Background="{x:Null}"  
             BorderBrush="Orange" Margin="32,6,43,7" Grid.Column="3" Grid.Row="1" 
             />




            <TextBlock 
               Foreground="Orange" 
               FontSize="15" 
               FontFamily="Verdana" Margin="74,7,0,7" Grid.Row="1" HorizontalAlignment="Left" Width="49"><Run Text="Type"/><Run Language="en-ca" Text=" "/><Run Text=":"/></TextBlock>
            <TextBox x:Name="TypeTextBox" 
             IsReadOnly="True" 
             Foreground="Orange" 
             Background="{x:Null}" 
             BorderBrush="Orange" Margin="9,8,10,8" Grid.Column="1" Grid.Row="1"/>



            <TextBlock
               Text="Order ID : "
               x:Name="orderIdTextBlock" 
               Foreground="Orange" 
               FontFamily="Verdana" 
               TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="2" Height="26" FontSize="15" Width="82"/>
            <TextBox x:Name="OrderIdTextBlock" 
               IsReadOnly="True"
               TextWrapping="Wrap" 
             Foreground="Orange" 
             Background="{x:Null}" 
             BorderBrush="Orange" 
               FontFamily="Verdana" Grid.Column="3" Margin="34,3,45,5"/>


        </Grid>

        <!--list view: list all order-->
        <ListView x:Name="OrdersListBox" ItemsSource="{Binding OrderedItems}" Background="#FF454545" BorderBrush="Orange" FontFamily="Verdana" Foreground="#FFFBF8F8" FontSize="16" Grid.Column="3" Margin="10,10,7,10" Grid.Row="4" Grid.ColumnSpan="2">
            <ListView.ItemContainerStyle>
                <Style TargetType="{x:Type ListViewItem}">

                    <Setter Property="Foreground" Value="White"/>

                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsExistItem}" Value="true">
                            <Setter Property="Foreground" Value="Gray"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
                <GridView>

                    <GridViewColumn Header="Item Name" Width="200" DisplayMemberBinding="{Binding item_name}" />
                    <GridViewColumn Header="Item Price" Width="100" DisplayMemberBinding="{Binding ItemPrice, StringFormat=C}" />

                </GridView>

            </ListView.View>
            <ListView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <Button Tag="{Binding Name}" Content="{Binding Name}" Click="CustomerNumberButton_Click"/>
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </ListView.GroupStyle>



        </ListView>

        <!--Right hand side-->

        <!--Void button-->


        <!-- category button list-->
        <ScrollViewer VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Auto"  Grid.Column="5" Margin="10,0,15,0" Grid.Row="1" Grid.RowSpan="2">
            <WrapPanel x:Name="CategoryButtonPanel" Orientation="Horizontal" Margin="0,0,0,0"/>
        </ScrollViewer>

        <!-- item button list -->
        <WrapPanel Name="ItemButtonPanel" Orientation="Horizontal" Margin="10,40,15,10" Grid.Column="5" Grid.Row="3" Grid.RowSpan="2"/>
        <TextBlock Name="TotalAmountTextBlock" TextAlignment="Right" Grid.Column="4" HorizontalAlignment="Left" Margin="149,12,0,0" Grid.Row="5" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="63" Width="152" FontSize="24" Foreground="#FFFBF8F8" Grid.ColumnSpan="2"/>




    </Grid>



</Window>