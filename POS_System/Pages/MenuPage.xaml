<Window x:Class="POS_System.Pages.MenuPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POS_System.Pages"
        mc:Ignorable="d"
        Title="MenuPage" WindowState="Maximized" Width="800" Height="450">
    <Grid Background="#212121">
        <!-- Dark Gray Background -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>





        <!-- Buttons -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Back" HorizontalAlignment="Center" Background="Orange" BorderBrush="#FF4C4B56" FontSize="14" FontFamily="Verdana" FontWeight="Bold" Height="36" Margin="10,106,0,0" VerticalAlignment="Top" Width="73" Grid.Row="4" Click="Back_to_TablePage"/>
        <Button Background="Orange" BorderBrush="#FF4C4B56" FontSize="15" FontFamily="Verdana" FontWeight="Bold" Height="38" Margin="10,145,0,0" VerticalAlignment="Top" Width="73" Grid.Row="4">
            <Viewbox HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock TextWrapping="Wrap">
            Change
            Table
                </TextBlock>
            </Viewbox>
        </Button>
        <Button Content="Split Bill" HorizontalAlignment="Center" Background="Orange" BorderBrush="#FF4C4B56" FontSize="14" FontFamily="Verdana" FontWeight="Bold" Height="36" Margin="10,188,0,0" Grid.RowSpan="5" VerticalAlignment="Top" Width="73"/>
        <Button Content="Print Bill" HorizontalAlignment="Center" Background="Orange" BorderBrush="#FF4C4B56" FontSize="14" FontFamily="Verdana" FontWeight="Bold" Height="36" Margin="10,230,0,0" VerticalAlignment="Top" Width="73" Grid.Row="4"/>
        <Button Content="Payment" HorizontalAlignment="Center" Background="Orange" BorderBrush="#FF4C4B56" FontSize="14" FontFamily="Verdana" FontWeight="Bold" Height="36" VerticalAlignment="Top" Width="73" Grid.Row="4" Margin="15,271,0,0"/>





        <!-- Category Buttons -->
        <TabControl Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,5,0,0" Grid.Column="2" Grid.RowSpan="5" BorderThickness="0">
            <!-- First set of categories -->
            <TabItem Header="→" Height="22" Margin="-2,0,-2,0" VerticalAlignment="Bottom">
                <StackPanel Orientation="Horizontal" >
                    <Button Content="Category 1" Margin="5" Background="Orange" BorderBrush="#FF4C4B56" />
                    <Button Content="Category 2" Margin="5" Background="Orange" BorderBrush="#FF4C4B56"/>
                    <Button Content="Category 3" Margin="5" Background="Orange" BorderBrush="#FF4C4B56"/>
                    <Button Content="Category 4" Margin="5" Background="Orange" BorderBrush="#FF4C4B56"/>
                </StackPanel>
            </TabItem>



            <!-- Second set of categories -->
            <TabItem Header="→">
                <StackPanel Orientation="Horizontal">
                    <Button Content="Category 5" Margin="5"/>
                    <Button Content="Category 6" Margin="5"/>
                    <Button Content="Category 7" Margin="5"/>
                    <Button Content="Category 8" Margin="5"/>
                </StackPanel>
            </TabItem>
        </TabControl>



        <!-- Table Information -->
        <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Vertical" Margin="10,0,10,185" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Table Number:" VerticalAlignment="Center" Margin="0,5" Foreground="Orange"/>
                <TextBox Text="1" VerticalAlignment="Center" IsReadOnly="True" Grid.Column="1" Foreground="Orange" Background="#FF454545"  BorderBrush="Orange" Margin="10,0,-10,0" />
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Status:" VerticalAlignment="Center" Margin="0,5" Foreground="Orange"/>
                <TextBox Text="Occupied" VerticalAlignment="Center" IsReadOnly="True" Grid.Column="1" RenderTransformOrigin="0.562,0.65"  Foreground="Orange" Background="#FF454545"  BorderBrush="Orange" Margin="10,0,-10,0"/>
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Type:" VerticalAlignment="Center" Margin="0,5" Foreground="Orange"/>
                <TextBox Text="Dining" VerticalAlignment="Center" IsReadOnly="True" Grid.Column="1" Foreground="Orange" Background="#FF454545"  BorderBrush="Orange" Margin="10,0,-10,0"/>
            </Grid>
            <ListBox x:Name="OrdersListBox" Width="297" Height="313"  Background="#FF454545"  BorderBrush="Orange">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding FoodName}" Width="150"/>
                            <TextBlock Text="{Binding Quantity}" Width="50"/>
                            <TextBlock Text="{Binding Price}" Width="100"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>





        <Button Grid.Column="1" Content="Send" HorizontalAlignment="Left" Height="24" Margin="10,396,0,0" Grid.RowSpan="5" VerticalAlignment="Top" Width="84" Foreground="Orange" Background="#FF454545"  BorderBrush="Orange" />
        <Button Grid.Column="1" Content="Void" HorizontalAlignment="Left" Height="24" Margin="100,396,0,0" Grid.RowSpan="5" VerticalAlignment="Top" Width="84" Foreground="Orange" Background="#FF454545"  BorderBrush="Orange"  />





        <Grid Grid.Column="3" HorizontalAlignment="Left" Height="423" Margin="10,10,0,0" Grid.RowSpan="5" VerticalAlignment="Top" Width="300">
            <ListBox x:Name="FoodItemsListBox" BorderThickness="0" Background="Transparent" Margin="-208,0,231,0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Button Content="{Binding FoodName}" Width="150" Height="50" Margin="5" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>







        </Grid>







    </Grid>
</Window>
