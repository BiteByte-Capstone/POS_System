<Window x:Class="POS_System.Pages.ManageMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ManageMenu" Width="832" Height="562.387" WindowStartupLocation="CenterOwner" Background="#212121">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FF454545"/>
            <!-- Dark gray background color -->
            <Setter Property="Foreground" Value="Orange"/>
            <!-- Orange text color -->
            <Setter Property="Margin" Value="0,5,0,5"/>
            <!-- Adjust button margin -->
            <Setter Property="Padding" Value="10,5"/>
            <!-- Adjust button padding -->
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Title or Logo -->
        <TextBlock Text="Menu Management" FontSize="45" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" Foreground="Orange"/>

        <!-- Menu Management Options -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,100,0,0">
            <!-- Add New Item Button -->
            <Button x:Name="AddItemButton" Content="Add New Item" Width="200" Height="50" Click="AddItemButton_Click"/>

            <!-- Edit Item Button -->
            <Button x:Name="EditItemButton" Content="Edit Item" Width="200" Height="50" Click="EditItemButton_Click"/>

            <!-- Delete Item Button -->
            <Button x:Name="DeleteItemButton" Content="Delete Item" Width="200" Height="50" Click="DeleteItemButton_Click"/>

            <!-- View Sales Button -->
            <Button x:Name="ViewSalesButton" Content="View Sales" Width="200" Height="50" />

            <!-- Settings Button -->
            <Button x:Name="SettingsButton" Content="Settings" Width="200" Height="50" Click="SettingsButton_Click"/>

            <!-- Item Addition Form (Initially Hidden) -->
            <StackPanel x:Name="ItemAdditionForm" Visibility="Collapsed">

                <TextBox x:Name="ItemNameTextBox" 
         Text="Enter item name" 
         Foreground="Orange" 
         Background="#FF454545" 
         BorderBrush="Orange"
         GotFocus="ItemNameTextBox_GotFocus"
         LostFocus="ItemNameTextBox_LostFocus"/>

                <TextBox x:Name="ItemPriceTextBox" 
         Text="Enter item price" 
         Foreground="Orange" 
         Background="#FF454545" 
         BorderBrush="Orange"
         GotFocus="ItemPriceTextBox_GotFocus"
         LostFocus="ItemPriceTextBox_LostFocus"/>

                <Button Content="Add" Click="AddItemButton_Click" Width="100" HorizontalAlignment="Center" Margin="0,10,10,0"  Foreground="Black" Background="Orange" BorderBrush="#FF4C4B56"/>
                <Button Content="Cancel" Click="CancelAddItemButton_Click" Width="100" HorizontalAlignment="Center" Margin="10,10,0,0"  Foreground="Black" Background="Orange" BorderBrush="#FF4C4B56"/>
            </StackPanel>

            <ListBox x:Name="ItemList" Width="300" Height="400" Background="Gray" BorderBrush="Gray" Margin="0,20,0,0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Price, StringFormat={}{0:C2}}" Foreground="Orange"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Grid>
</Window>