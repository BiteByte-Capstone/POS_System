<Window x:Class="POS_System.Pages.PaymentPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" WindowState="Maximized" Height="746" Width="1777" Background="#212121">
    <DockPanel Margin="10,0,10,-6">
        <!-- Center the grid horizontally and vertically -->
        <Grid Width="1764" Background="#212121" Height="727">
            <Grid.RowDefinitions>

                <RowDefinition Height="100" />
                <RowDefinition Height="100"/>
                <RowDefinition Height="100" MinHeight="50" />
                <RowDefinition Height="100" MinHeight="50" />
                <RowDefinition Height="100" MinHeight="50"/>
                <RowDefinition Height="100" MinHeight="50"/>
            </Grid.RowDefinitions>



            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="279" />
                <ColumnDefinition Width="Auto" MinWidth="793" />

            </Grid.ColumnDefinitions>



            <!-- Buttons -->
            <Button x:Name="cancelBtn" Content="Cash" Grid.Column="0" Margin="80,61,0,55" Foreground="Orange" Background="#FF4C4B56" BorderBrush="Orange" Grid.RowSpan="2" FontSize="25" FontFamily="Verdana" FontWeight="Bold" Grid.Row="1" />
            <Button Content="Visa" Grid.Row="2" Grid.Column="0" Margin="80,45,0,72" Foreground="Orange" Background="#FF4C4B56" BorderBrush="Orange" FontSize="25" FontFamily="Verdana" FontWeight="Bold" Grid.RowSpan="2"/>
            <Button Content="M/C" Grid.Row="3" Grid.Column="0" Margin="80,28,0,84" Foreground="Orange" Background="#FF4C4B56" BorderBrush="Orange" FontSize="25" FontFamily="Verdana" FontWeight="Bold" Grid.RowSpan="2" />
            <Button Content="AMEX" Grid.Row="4" Grid.Column="0" Margin="80,16,0,90" Foreground="Orange" Background="#FF4C4B56" BorderBrush="Orange" FontSize="25" FontFamily="Verdana" FontWeight="Bold" Grid.RowSpan="2"/>
            <Button Content="Cancel" Margin="0,1,0,1" HorizontalAlignment="Left" Width="200" Foreground="Orange" Background="#FF4C4B56" BorderBrush="Orange" FontSize="25" FontFamily="Verdana" FontWeight="Bold" Click="CancelButton"/>
            <Button Name="SaveButton" Content="Save" Grid.Row="5" Margin="80,10,0,0" Foreground="Black" Background="Green" BorderBrush="Orange" FontSize="25" FontFamily="Verdana" FontWeight="Bold"/>
            <Button Name="EnterButton" Content="✓" Grid.Row="2" Margin="798,10,-52,14" Foreground="Black" Background="Green" BorderBrush="Orange" FontSize="25" FontFamily="Verdana" FontWeight="Bold" Grid.Column="1" Click="EnterButton_Click"/>




            <!-- Labels and TextBlocks -->
            <Label x:Name="orderAmtLabel" Content="Total Order Amount:" Grid.Column="1" Margin="185,0,340,0" FontSize="20" Background="Orange" Grid.Row="1" Height="80" VerticalAlignment="Center" BorderBrush="#FF4C4B56" BorderThickness="3" FontFamily="Verdana" RenderTransformOrigin="0.247,0.55"/>
            <Label x:Name="customerPayLabel" Content="Customer Payment:" Grid.Column="1" Margin="185,10,340,10" FontSize="20" Background="Orange" Grid.Row="2" BorderBrush="#FF4C4B56" BorderThickness="3" FontFamily="Verdana"/>
            <Label x:Name="tipsLabel" Content="Tips:" Grid.Column="1" Margin="185,10,340,10" FontSize="20" Background="Orange" Grid.Row="3" BorderBrush="#FF4C4B56" BorderThickness="3" FontFamily="Verdana"/>
            <Label x:Name="changeLabel" Content="Change:" Grid.Column="1" Margin="185,10,340,10" FontSize="20" Background="Orange" Grid.Row="4" BorderThickness="3" BorderBrush="#FF4C4B56"/>


            <TextBlock x:Name="toalAmtTextBox" Grid.Column="1" HorizontalAlignment="Left" Margin="493,10,0,10" TextWrapping="Wrap" Width="300" Background="#FFF1D7D7" Grid.Row="1" FontSize="25" FontFamily="Verdana" FontWeight="Bold" TextAlignment="Center"/>
            <TextBox x:Name="customerPayTextBox" Grid.Column="1" HorizontalAlignment="Left" Margin="493,0,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Center" Width="300" Height="80" Background="#FFF1D7D7"  FontSize="25" FontFamily="Verdana" FontWeight="Bold" TextAlignment="Center"/>
            <TextBlock x:Name="tipsTextbox" Grid.Column="1" HorizontalAlignment="Left" Margin="493,0,0,0" Grid.Row="3" TextWrapping="Wrap" VerticalAlignment="Center" Height="80" Width="300" Background="#FFF1D7D7" FontSize="25" FontFamily="Verdana" FontWeight="Bold" TextAlignment="Center"/>
            <TextBlock x:Name="changeTextBox" Grid.Column="1" HorizontalAlignment="Left" Margin="493,0,0,0" Grid.Row="4" TextWrapping="Wrap" VerticalAlignment="Center" Height="80" Width="300" Background="#FFF1D7D7" FontSize="25" FontFamily="Verdana" FontWeight="Bold" TextAlignment="Center"/>
        </Grid>
        <Label Content="Label" Width="0"/>
        <Label Content="Label" Width="0"/>



    </DockPanel>
</Window>

