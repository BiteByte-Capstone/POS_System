<Window x:Class="POS_System.Pages.AdminManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AdminManagement" 
        WindowState="Maximized" 
        Width="846" 
        Height="544" 
        Foreground="Orange" 
        Background="#383838" 
        BorderBrush="#383838">
    <Grid Margin="0,0,10,-6">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" 
                   Grid.ColumnSpan="5" 
                   HorizontalAlignment="Center" 
                   Text="Welcome, Admin" 
                   FontSize="36"
                   FontWeight="Bold" 
                   FontStyle="Italic" 
                   Foreground="Orange" 
                   Background="#383838" 
                   Margin="0,0,0,20"
                   />

        <!-- Manage Users -->
        <Button Grid.Row="1" 
                Grid.Column="1" 
                HorizontalAlignment="Center" 
                Width="250" 
                Height="200" 
                FontSize="16" 
                Foreground="Orange" 
                Background="#383838" 
                BorderBrush="Orange" 
                Click="Button_Click">
            <Grid Margin="10,10,10,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Manage Users Image & Text -->
                <Image Grid.Row="0"
                       Source="C:\Users\2002g\source\repos\POS_System\POS_System\Images\ManageUser.png"
                       Width="168"
                       HorizontalAlignment="Left"
                       Margin="24,-7,0,32" Grid.RowSpan="2"/>
                <TextBlock Grid.Row="1"
                           Text="Manage Users" FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="10,18,0,0"/>
            </Grid>
        </Button>

        <!-- Manage Sales -->
        <Button Grid.Row="1" 
                Grid.Column="2" 
                HorizontalAlignment="Center" 
                Width="250" 
                Height="200" 
                FontSize="16" 
                Foreground="Orange" 
                Background="#383838" 
                BorderBrush="Orange" Click="Button_Click_1">
            <Grid Margin="10,10,10,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Manage Sales Image & Text -->
                <Image Grid.Row="0" 
                       Source="C:\Users\2002g\source\repos\POS_System\POS_System\Images\ManageSales.png"
                       Width="200"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"
                       Grid.RowSpan="2"/>

                <TextBlock Grid.Row="1" 
                   Text="Manage Sales"
                   HorizontalAlignment="Center"
                   FontWeight="Bold"
                   Margin="10,18,0,0"/>
            </Grid>
        </Button>

        <!-- Manage Table -->
        <Button Grid.Row="1" 
                Grid.Column="3" 
                HorizontalAlignment="Center" 
                Width="250" 
                Height="200" 
                FontSize="16" 
                Foreground="Orange" 
                Background="#383838" 
                BorderBrush="Orange">
            <Grid Margin="10,10,10,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Manage Table Image & Text -->
                <Image Grid.Row="0"
                       Source="C:\Users\2002g\source\repos\POS_System\POS_System\Images\ManageTable.png"
                       Width="200" HorizontalAlignment="Center"
                       Margin="0,0,0,30" Grid.RowSpan="2"/>
                <TextBlock Grid.Row="1"
                           Text="Manage Table"
                           HorizontalAlignment="Center"
                           FontWeight="Bold"
                           Margin="10,18,0,0"/>
            </Grid>
        </Button>

        <!-- Manage Menu -->
        <Button Grid.Row="2" 
                Grid.Column="2"  
                HorizontalAlignment="Center" 
                Width="250" 
                Height="200" 
                FontSize="16" 
                Foreground="Orange" 
                Background="#383838" 
                BorderBrush="Orange" Margin="80,20,75,200">
            <Grid Margin="10,10,10,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Manage Menu Image & Text (update image source as needed) -->
                <Image Grid.Row="0"
                       Source="C:\Users\2002g\source\repos\POS_System\POS_System\Images\ManageMenu.png"
                       Width="200" HorizontalAlignment="Center"
                       Margin="0,0,0,10" Grid.RowSpan="1"/>
                <TextBlock Grid.Row="1"
                           Text="Manage Menu"
                           HorizontalAlignment="Center"
                           FontWeight="Bold"
                           Margin="45,0,45,0"/>
            </Grid>
        </Button>

        <Button x:Name="Logout_Button_Click" 
                Content="Logout" 
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                BorderBrush="Orange" 
                Background="#383838" 
                Foreground="Orange" 
                BorderThickness="5,5,5,5" 
                Width="200" 
                Height="80" 
                Click="LogoutButton_Click"
                Grid.Column="4" Grid.Row="3"/>
    </Grid>
</Window>
